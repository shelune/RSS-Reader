<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_marginBottom="7dp"
    >

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="fill_parent"
        android:layout_height="180dp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        >

        <View
            android:id="@+id/overlay_top"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:background="@drawable/roundedshape_down"
            android:alpha="0.9"/>

        <TextView
            android:id="@+id/pubDate"
            android:textSize="12sp"
            android:textColor="#fff"
            android:alpha="0.7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:padding="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="180dp">

        <View
            android:id="@+id/overlay_btm"
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:background="@drawable/roundedshape_up"
            android:scrollIndicators="none"
            android:layout_alignParentBottom="true"
            android:alpha="0.9"/>

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/itemTitle"
            android:textSize="19sp"
            android:textColor="#fff"
            android:alpha="1.0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:password="false"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical|center_horizontal"
            android:layout_alignBottom="@+id/overlay_btm"
            android:layout_alignTop="@+id/overlay_btm"
            />

    </RelativeLayout>
</RelativeLayout>
